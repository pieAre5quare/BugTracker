@model BugTracker.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<!-- Main Container start -->
<div class="dashboard-container">
    <div class="container">
        <!-- Dashboard Wrapper Start -->
        <div class="dashboard-wrapper">
            <!-- Row Start -->
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="widget sales-overview">
                        <div class="widget-header">
                            <div class="title">
                                Overview
                            </div>
                        </div>
                        <div class="widget-body no-padding">
                            <ul class="nav nav-tabs nav-justified" role="tablist">
                                <li role="presentation" class="active">
                                    <a href="#tickets" aria-controls="tickets" role="tab" data-toggle="tab">
                                        <div class="overview-tab clearfix">
                                            <div class="tab-icon">
                                                <i class="fa fa-laptop"></i>
                                            </div>
                                            <div class="tab-details">
                                                <p>My Tickets</p>
                                                <h4>5689</h4>
                                                <p>200% of total</p>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li role="presentation">
                                    <a href="#incomeOnline" aria-controls="incomeOnline" role="tab" data-toggle="tab">
                                        <div class="overview-tab clearfix">
                                            <div class="tab-icon">
                                                <i class="fa fa-dollar"></i>
                                            </div>
                                            <div class="tab-details">
                                                <p>Projects</p>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li role="presentation">
                                    <a href="#returnOnline" aria-controls="returnOnline" role="tab" data-toggle="tab">
                                        <div class="overview-tab clearfix">
                                            <div class="tab-icon">
                                                <i class="fa fa-undo"></i>
                                            </div>
                                            <div class="tab-details">
                                                <p>Return Rate</p>
                                                <h4>112</h4>
                                                <p>7% of total</p>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li role="presentation">
                                    <a href="#reviewsOnline" aria-controls="reviewsOnline" role="tab" data-toggle="tab">
                                        <div class="overview-tab clearfix">
                                            <div class="tab-icon">
                                                <i class="fa fa-calendar-check-o"></i>
                                            </div>
                                            <div class="tab-details">
                                                <p>Total Reviews</p>
                                                <h4>2378</h4>
                                                <p>Positive/Negative</p>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane active" id="tickets">
                                    <div class="row">
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            <table class="table">
                                                <tr>
                                                    <th>
                                                        Title
                                                    </th>
                                                    <th>
                                                        Ticket Status
                                                    </th>
                                                    <th>
                                                        Ticket Priority
                                                    </th>
                                                    <th>
                                                        Project
                                                    </th>
                                                    
                                                </tr>

                                                @foreach (var item in Model.Tickets)
                                                {

                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Title)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Status.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Priority.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Project.Name)
                                                        </td>
                                                        
                                                        @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                                                        {
                                                            <td>
                                                                @Html.ActionLink("Edit", "Edit", "Tickets", new { id = item.ID }, new { }) |
                                                                @Html.ActionLink("Details", "Details", "Tickets", new { id = item.ID }, new { }) |
                                                                @Html.ActionLink("Delete", "Delete", "Tickets", new { id = item.ID }, new { })
                                                            </td>
                                                        }
                                                    </tr>
                                                }

                                            </table>
                                        </div>
                                        <div class="col-md-3 col-sm-3 col-xs-12">
                                            <div id="europe" class="testBar">25</div>
                                            <div id="asia" class="testBar">45.3</div>
                                            <div id="america" class="testBar">29.4</div>
                                            <div id="africa" class="testBar">11.2</div>
                                        </div>
                                    </div>
                                </div>
                                <div role="tabpanel" class="tab-pane" id="incomeOnline">
                                    <div class="row">
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            <table class="table">
                                                <tr>
                                                    <th>
                                                        Project Name
                                                    </th>
                                                    <th></th>
                                                </tr>

                                                @foreach (var item in Model.Projects)
                                                {

                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Name)
                                                        </td>
                                                        @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                                                        {
                                                            <td>
                                                                @Html.ActionLink("Edit", "Edit","Projects", new { id = item.ID }, new { }) |
                                                                @Html.ActionLink("Details", "Details", "Projects", new { id = item.ID }, new { }) |
                                                                @Html.ActionLink("Delete", "Delete", "Projects", new { id = item.ID }, new { })
                                                            </td>
                                                        }
                                                    </tr>
                                                }

                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div role="tabpanel" class="tab-pane" id="returnOnline">
                                    <div class="row">
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            <div id="realtime-chart" style="width: 100%; height: 210px"></div>
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <ul class="revenue-from">
                                                <li>
                                                    <small>From Europe</small>
                                                    <div class="progress progress-xs">
                                                        <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%">
                                                            <span class="sr-only">25% Complete</span>
                                                        </div>
                                                    </div>
                                                    <span class="revenue-perc info">25%</span>
                                                </li>
                                                <li>
                                                    <small>From Asia</small>
                                                    <div class="progress progress-xs">
                                                        <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                                                            <span class="sr-only">40% Complete</span>
                                                        </div>
                                                    </div>
                                                    <span class="revenue-perc danger">40%</span>
                                                </li>
                                                <li>
                                                    <small>From America</small>
                                                    <div class="progress progress-xs">
                                                        <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100" style="width: 15%">
                                                            <span class="sr-only">15% Complete</span>
                                                        </div>
                                                    </div>
                                                    <span class="revenue-perc warning">15%</span>
                                                </li>
                                                <li>
                                                    <small>From Other</small>
                                                    <div class="progress progress-xs">
                                                        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                                                            <span class="sr-only">20% Complete</span>
                                                        </div>
                                                    </div>
                                                    <span class="revenue-perc success">20%</span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div role="tabpanel" class="tab-pane" id="reviewsOnline">
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 col-xs-12">
                                            <div id="scatter-chart" style="width: 100%; height: 210px"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Row End -->
        </div>
        <!-- Dashboard Wrapper End -->
        <footer>
            <p>© BlueMoon 2013-15</p>
        </footer>
    </div>
</div>
<!-- Main Container end -->