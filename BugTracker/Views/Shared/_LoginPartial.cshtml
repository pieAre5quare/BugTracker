@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        
            <div>
                
                <a href="@Url.Action("Index","Manage")" title="Manage" class="logout-partial">@User.Identity.GetUserName()</a>
                |
                <a href="javascript:document.getElementById('logoutForm').submit()" class="logout-partial">Log off</a>
            </div>
        

    }
}
else
{

    <div class="row navbar-right">
        <div>
            <a href="@Url.Action("Register", "Account")" id="registerLink">
                <i class="fa fa-picture-o"></i>
                Register
            </a>
            <a href="@Url.Action("Login", "Account")" id="loginlink">
                <i class="fa fa-picture-o"></i>
                Log in
            </a>
        </div>
    </div>

}
